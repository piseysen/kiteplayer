<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

    <PreferenceCategory
        android:title="@string/preference_group_network_data">

        <SwitchPreference
            android:key="pref_cellular_data"
            android:title="@string/pref_cellular_data"
            android:summary="@string/pref_cellular_data_summary"
            android:defaultValue="false"/>

        <EditTextPreference
            android:key="pref_cache_size"
            android:title="@string/pref_cache_size_title"
            android:summary="@string/pref_cache_size_summary"
            android:dialogTitle="@string/pref_cache_size_title"
            android:dialogMessage="@string/pref_cache_size_dialog_msg"
            android:defaultValue="200"
            android:inputType="number" />

    </PreferenceCategory>

</PreferenceScreen>